{% extends 'base.html.twig' %}

{% block body %}

	<div class="container-fluid">
		<div class="row">
			{% for HomeContent in content %}
				<section class="content">

					<p>{{HomeContent.content|raw}}</p>
					{% if HomeContent.image %}
						<img src="{{ '/images/home/' ~ HomeContent.image }}" alt="HomeContent.image">
					{% endif %}


				</section>
			{% endfor %}
		</div>
		<div class="row">
			<section>
				<h2>Nos Prestations</h2>
				<div class="container-fluid d-flex justify-content-center flex-wrap text-center">
					{% for home_services in services %}
						<div class="card m-2" style="max-width: 15rem;">
							{% if home_services.image %}
								<img src="{{ asset('images/home/services/' ~ home_services.image) }}" alt="{{ home_services.image }}" style="max-width: 20rem;">
							{% endif %}
							<div class="card-body">
								<h3>{{ home_services.title }}</h3>
								<p class="card-text">{{home_services.content}}</p>
							</div>
							<div class="card-footer">
								<p>à partir de
									{{home_services.price}}€</p>
							</div>
						</div>
					{% endfor %}
				</div>
			</section>
		</div>
		<section>
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-12">
						<h2>Votre avis nous intéresse !</h2>
						<p>La satisfaction de nos clients est notre priorité numéro une, n’hésitez pas à nous laisser
							<a href="/vos_avis">votre avis</a>
							suite à votre passage !</p>
						<div class="d-flex justify-content-center text-center">
							<div id="carousel" class="carousel slide" style="max-width: 30rem;" data-bs-ride="carousel">
								<div class="carousel-inner">

									{% for review in reviews %}
										<div class="carousel-item {% if loop.first %}active{% endif %} text-center">
											<div class="carousel-content p-4">
												<h5>{{ review.name }}</h5>
												<p>{{ review.comment }}</p>
												<p>{{ review.note }}</p>
											</div>
										</div>
									{% endfor %}

								</div>
								<button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
									<span class="carousel-control-prev-icon" aria-hidden="true"></span>
									<span class="sr-only">Précédent</span>
								</button>
								<button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
									<span class="carousel-control-next-icon" aria-hidden="true"></span>
									<span class="sr-only">Suivant</span>
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>

{% endblock %}

