{% extends 'base.html.twig' %}

{% block body %}

	<div class="container-fluid">
		<div class="row">
				{% for HomeContent in content %}
					<section class="content">

						<p>{{HomeContent.content|raw}}</p>
						{% if HomeContent.image %}
						<img src="{{ '/images/home/' ~ HomeContent.image }}" alt="HomeContent.image">
						{% endif %}
						

					</section>
				{% endfor %}
		</div>
		<div class="container-fluid d-flex justify-content-center">
			<div class="row">
				<div class="col-lg-12">
					<div id="#carouselExampleControls" class="carousel slide" style="max-width: 30rem;" data-ride="carousel">
						<div class="carousel-inner">

							{% for review in reviews %}
								<div class="carousel-item {% if loop.first %}active{% endif %} text-center">
									<div class="carousel-content p-4">
										<h5>{{ review.name }}</h5>
										<p>{{ review.comment }}</p>
										<p>{{ review.note }}</p>
									</div>
								</div>
							{% endfor %}

						</div>
						<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="sr-only">Previous</span>
						</a>
						<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="sr-only">Next</span>
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}

