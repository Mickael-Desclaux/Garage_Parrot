{% extends "base.html.twig" %}


{% block body %}

	<div class="d-flex justify-content-around flex-wrap container mt-5">
		{% for car in cars %}
			<div class="card m-5" style="width: 20rem;">

				{% if car.image %}
					<img src={{car.image}} alt={{car.brand}}>
				{% endif %}
				<div class="card-body">

					{% if car.brand %}
						<h5 class="card-title text-center">{{car.brand}}</h5>
					{% endif %}
					<p class="card-text text-center">{{car.model}}</p>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}