{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}

	<div class="container-fluid">
    		<div class="row mt-2 offset-lg-1 offset-md-1">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="/">Accueil</a>
					</li>
					<li class="breadcrumb-item active" aria-current="page">Connexion</li>
				</ol>
			</nav>
		</div>
		<form method="post" class="container">
			<label for="email">E-Mail</label>
			<input type="email" id="email" name="_username" class="form-control" value="{{last_username}}" required>

			<label for="password">Mot de passe</label>
			<input type="password" name="_password" id="password" class="form-control" required>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button type="submit" class="btn btn-danger mt-3" value="Connexion">Connexion</button>
		</form>
	</div>
{% endblock %}

